import java.util.Scanner;
public class Task06 {
    public static void main(String[] args) { 
        Scanner sc = new Scanner(System.in);
        int[] a = new int[10];
        int i=0;
        for(; i<=a.length-1; ++i) {
            System.out.println("Please Enter Number:");
            a[i]=sc.nextInt();
            if(a[i]%2==0){
                break;
            }
        }
        System.out.println(a[i]);
    }
}
